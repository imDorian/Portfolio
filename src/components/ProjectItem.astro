---
const { title, description, link, image } = Astro.props;
---

<div
  class="w-full flex flex-col dark:bg-neutral-800 rounded-3xl border-2 dark:border-neutral-600 shadow md:flex-row hover:shadow-inner sm: flex-row hover:shadow-inner relative group"
>
  <div class="overflow-hidden rounded-3xl">
    <a href="#">
      <img
        class="rounded-3xl
       object-cover object-centeral
       w-full
       md:w-[50vw] h-auto transition-transform duration-500 ease-in-out transform group-hover:scale-110 group-hover:shadow-inner group-hover:shadow-2xl"
        src={image}
        alt={title}
      />
    </a>
  </div>

  <div class="p-5">
    <a href="#">
      <h5
        class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
      >
        {title}
      </h5>
    </a>
    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
      {description}
    </p>
    <a
      href={link}
      class="inline-flex items-center px-3 py-2 text-sm font-medium text-center dark:text-white dark:bg-purple-800 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
    >
      Ver proyecto
      <svg
        class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"></path>
      </svg>
    </a>
  </div>
</div>
